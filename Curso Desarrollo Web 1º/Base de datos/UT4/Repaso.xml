

1-- 
SELECT COUNT (*) FROM EMP;

2--
SELECT COUNT (DISTINCT JOB) FROM EMP;

3--
SELECT DISTINCT JOB,DEPTNO FROM EMP;

4--
SELECT * FROM EMP WHERE ENAME LIKE '%N';

5--
SELECT ENAME, ROUND(MONTHS_BETWEEN(SYSDATE,HIREDATE)) MESES
	FROM EMO WHERE DEPTNO <> 10
		OR COMM IS NULL;

6--
SELECT EMPNO,
		ENAME,
		TO_CHAR(HIREDATE, 'YYYY') AS "ANIO ENTRADA",
		NVL ((SAL + COMM),0) AS "SALARIO + COMISION"
FROM EMP
WHERE DEPTNO NOT IN(10,40)
	AND (TO_NUMBER(TO_CHAR(SYSDATE, 'YYYY')) - TO_NUMBER(TO_CHAR(HIREDATE, 'YYYY'))) BETWEEN 12 AND 16;